<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.glimpse.lecretsi.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="onReleaseFocus"
        android:layout_above="@+id/messageBox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/convLayout">

            <TextView
                android:text="This is a user message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userText"
                android:textSize="16sp"
                android:background="@drawable/usertextbox"
                android:layout_gravity="end"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:text="This is the assistant's reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/assistantText"
                android:textSize="16sp"
                android:background="@drawable/assistanttextbox"
                android:layout_gravity="start"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/messageBox">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:hint="Type a message..."
            android:id="@+id/messageText"
            android:background="@drawable/messagebox" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendButton"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_message_send"
            android:onClick="onSend"
            android:layout_margin="5dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>
