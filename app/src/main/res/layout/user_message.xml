<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:gravity="end"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagePosition"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingStart="35dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/userMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="none"
            android:maxLines="100"
            android:scrollHorizontally="false"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="clip_horizontal"
            android:text="The quick brown fox jumped over the lazyvwqrvwqrwqrvwqrvnwqnrvqwinrvwqunrv wqvrn wqv dog"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/user_text_box"/>

    </LinearLayout>

    <TextView
        android:id="@+id/messageDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Feb 15 â€¢ 23:23"
        android:textColor="@color/colorDarkGrey"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textSize="13sp"/>

</LinearLayout>