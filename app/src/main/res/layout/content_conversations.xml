<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_conversations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.glimpse.lecretsi.ConversationsActivity"
    tools:showIn="@layout/app_bar_conversations">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <ListView
            android:id="@+id/conversationsList"
            android:layout_width="wrap_content"
            android:layout_height="310dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/friendBox"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/friendGallery"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
        </HorizontalScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/friendRequests"
        android:layout_below="@+id/friendBox"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/requests"
            android:text="Requests"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listFriendRequests">
        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/friendRequests"
        android:layout_alignParentStart="true"
        android:id="@+id/assistantLayout"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

</RelativeLayout>
