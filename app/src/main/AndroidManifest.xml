<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glimpse.lecretsi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/lecretsi_list_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".NewMessageService"/>

        <activity android:name=".LecretsiIntro"/>

        <activity
            android:name=".ConversationsActivity"
            android:label="@string/activity_conversation"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ChatActivity"
            android:parentActivityName=".ConversationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ConversationsActivity" />
        </activity>


        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoTitle"/>

        <activity
            android:name=".FriendsActivity"
            android:label="@string/activity_friends"
            android:parentActivityName=".ConversationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ConversationsActivity" />
        </activity>

    </application>

    <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->

</manifest>